<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="208dp"
        android:fontFamily="@font/font_bookguk"
        android:text="관심있는 음반을 클릭해보세요"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/font_bookguk"
        android:text="실물음반의 매력을 알려드릴게요"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/LPImage"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginBottom="20dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/record"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/CDimage"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/CDimage"
        android:layout_width="96dp"
        android:layout_height="97dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="24dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cd"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/tapeImage" />

    <ImageButton
        android:id="@+id/tapeImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tape"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.931" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="116dp"
        android:fontFamily="@font/font_bookguk"
        android:text="LP"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginBottom="116dp"
        android:fontFamily="@font/font_bookguk"
        android:text="CD"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:fontFamily="@font/font_bookguk"
        android:text="Tape"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toEndOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>